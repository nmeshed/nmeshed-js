{
  "name": "nmeshed",
  "version": "0.2.0",
  "description": "Zen SDK for real-time state synchronization. Zero perceived latency through absolute clarity.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./react": {
      "types": "./dist/react/index.d.ts",
      "import": "./dist/react/index.mjs",
      "require": "./dist/react/index.js"
    }
  },
  "files": [
    "dist",
    "src/wasm"
  ],
  "scripts": {
    "build": "tsup",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "docs:generate": "typedoc"
  },
  "peerDependencies": {
    "react": ">=17.0.0",
    "zod": "^3.0.0 || ^4.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "devDependencies": {
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.2.7",
    "@vitest/coverage-v8": "^4.0.16",
    "happy-dom": "^20.0.11",
    "jsdom": "^27.4.0",
    "tsup": "^8.0.0",
    "typedoc": "^0.28.15",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.0",
    "zod": "^3.25.76"
  },
  "dependencies": {
    "@msgpack/msgpack": "^3.1.3",
    "flatbuffers": "^25.9.23"
  }
}